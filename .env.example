# ADK IDE Environment Configuration Example
# Copy this file to .env and update with your actual values

# Environment
ADK_IDE_ENV=development
DEBUG=true

# Google Cloud Configuration (Required)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CLOUD_PROJECT=your-project-id
GOOGLE_CLOUD_REGION=us-central1

# ADK Configuration
ADK_MODEL=gemini-2.5-flash
ADK_SAFETY_MODEL=gemini-2.5-flash
ADK_MAX_ITERATIONS=5
ADK_MAX_LLM_CALLS=500

# Session Management
SESSION_SERVICE_TYPE=memory
SESSION_ENCRYPTION_KEY=your-32-character-encryption-key-here
SESSION_TIMEOUT_HOURS=24

# Database Configuration (Required for production)
DATABASE_URL=postgresql://user:password@localhost:5432/adk_ide
REDIS_URL=redis://localhost:6379/0

# Security Configuration
SECRET_KEY=your-secret-key-here
JWT_ALGORITHM=HS256
JWT_EXPIRATION_HOURS=24

# VPC Security Configuration
VPC_SC_PERIMETER_NAME=adk-ide-perimeter
ALLOWED_IP_RANGES=0.0.0.0/0

# Observability Configuration
ENABLE_TRACING=true
ARIZE_API_KEY=your-arize-api-key
ARIZE_SPACE_KEY=your-arize-space-key
PHOENIX_ENDPOINT=http://localhost:6006
PHOENIX_API_KEY=your-phoenix-api-key

# Server Configuration
HOST=0.0.0.0
PORT=8080
WORKERS=1

# Resource Limits
MAX_MEMORY_MB=4096
MAX_CPU_CORES=2
MAX_EXECUTION_TIME_SECONDS=300